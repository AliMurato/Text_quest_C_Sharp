<Window x:Class="CoffeeShopSimulator.ExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exit Confirmation" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Text="Exiting now will not save current progress. Are you sure you want to exit?" Margin="20" TextWrapping="Wrap" Width="230"/>
        <Button Content="Yes" Margin="10" Click="ConfirmExit_Click" Width="240"/>
        <Button Content="No" Margin="10" Click="CancelExit_Click" Width="240"/>
    </StackPanel>
</Window>

